{
	"compilerOptions": {
		"target": "ES5",
		"lib": [ "ESNext", "DOM" ],
        "sourceMap": true,
        "noImplicitAny": false,
		"moduleResolution": "node",
		"allowJs": false,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react",
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./lib-tsc",
		"resolveJsonModule": true,
		"removeComments": true,
		"downlevelIteration": true,
		"declaration": true,
		"declarationDir": "./lib",
		"declarationMap": true,
		"typeRoots": [
			"./src/types"
		]
	},
	"include": [
		"src/**/*"
	]
}